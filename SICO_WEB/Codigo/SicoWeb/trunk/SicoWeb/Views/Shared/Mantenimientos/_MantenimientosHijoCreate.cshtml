@using SicoWeb.Aplicacion.ServiceLayer.Mantenimiento.Entidades
@inherits SicoWeb.Plumbing.ViewPage<EntidadServicioMantenimientoHijo<EntidadServicioMantenimiento>>
			  
<script src="../../../Scripts/jquery.validate.js" type="text/javascript"></script>


<script src="../../../Scripts/jquery.validate.min.js" type="text/javascript"></script>

<script src="../../../Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>
@using (AjaxExtensions.BeginForm(Ajax, "Create", ViewBag.ControllerName, null, 
	new AjaxOptions { UpdateTargetId = "createMesage", InsertionMode = InsertionMode.Replace, HttpMethod = "POST", OnSuccess = "updateSuccess" },
	new { @id = "createForm" }))
{
   
	@Html.ValidationSummary(true)
	 <div id="createMesage" class="error  invisible" >
     </div>
	<fieldset>
		<legend>@ViewBag.Title</legend>
        <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Descripcion ) 
                </td>
                
                <td>
                    @Html.EditorFor( x=>x.Descripcion)
			        @Html.ValidationMessageFor( x=>x.Descripcion)  
                </td>
            </tr>


            <tr>
                <td>
                        @ViewBag.DescripcionPadre
                </td>
                <td>
                     @Html.DropDownListFor(d=>d.PadreId,new SelectList( Model.Padres,"Id","Descripcion"),"")
                                        
                     @Html.ValidationMessageFor( d=>d.PadreId)
                     
                </td>
            </tr>
             <tr>
                <td>
                       @this.Label(x=>x.Habilitado)
                </td>                
                <td>
                    @this.CheckBox(x => x.Habilitado)       
                </td>
            </tr>
           
        </table>	
		
	</fieldset>
 
   
}

