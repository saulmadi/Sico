@using SicoWeb.Aplicacion.ServiceLayer.Mantenimiento.Entidades
@using SicoWeb.Plumbing
@using MvcContrib.FluentHtml
@inherits SicoWeb.Plumbing.ViewPage<EntidadServicioMantenimiento>

<script src="../../../Scripts/jquery.validate.js" type="text/javascript"></script>


<script src="../../../Scripts/jquery.validate.min.js" type="text/javascript"></script>

<script src="../../../Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>


@using (AjaxExtensions.BeginForm(Ajax, "Edit", ViewBag.ControllerName, null,
    new AjaxOptions { UpdateTargetId = "editMessage", InsertionMode = InsertionMode.Replace, HttpMethod = "POST", OnSuccess = "editSuccess" },
    new { @id = "editForm" }))
{
    <div id="editMessage" class="error  invisible"></div>
    @Html.ValidationSummary(true)
    <fieldset>
     
        <legend>@ViewBag.Title</legend>
            @Html.Hidden("Id",Model.Id) 
            @Html.Hidden( "Usu",Model.Usu)
       
            @{ 
                if( (bool) ViewData[ViewDataVariables.MantenimientoEditable] )
                {
                
                   <div>
                      @Html.LabelFor(model => model.Descripcion)
                      @Html.EditorFor(x => x.Descripcion)
                      @Html.ValidationMessageFor(x => x.Descripcion)
                   </div>
                    
                }
                else
                {
                    
                     @Html.Display("Descripción")
                    

                        @Html.DisplayFor(model => model.Descripcion)
                        @Html.Hidden("Descripcion",Model.Descripcion)
                     
                }
            }
            
            <div>
         @Html.LabelFor(model => model.Habilitado)
            @Html.EditorFor(model => model.Habilitado)
            
        </div>
        
    </fieldset>
}

