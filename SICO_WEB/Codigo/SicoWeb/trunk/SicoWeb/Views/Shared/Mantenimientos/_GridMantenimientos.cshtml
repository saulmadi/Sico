@using SicoWeb.Aplicacion.ServiceLayer.Mantenimiento.Entidades
@inherits SicoWeb.Plumbing.ViewPage<IEnumerable<EntidadServicioMantenimiento>>
@using MvcContrib.UI.Grid 



    <script src="@Url.Content("~/Scripts/DataTables-1.9.0/media/js/jquery.dataTables.min.js")" type="text/javascript"></script>
 


 
         @Html.Grid(Model).Columns(column =>
                                    {
                                        column.For(dato => dato.Descripcion).Named("Descripción");
                                        column.For(dato => this.CheckBox("habilitado").Checked(dato.Habilitado).Disabled(true )).Named("Habilitado");
                                        column.For(dato => this.Button("Editar").Class("editButton").Attr("href",@Url.Action("Edit", dato)));
                                    }).Attributes(id=>"Grid")
 
     
   


   
<script  type="text/javascript">
$(document).ready (function () {
    $('#Grid').dataTable({
        "bJQueryUI": true,
        "bPaginate": true,
        "bLengthChange": false,
        "bFilter": true,
        "bInfo": false,
        "bAutoWidth": false,

        "sScrollY": "200px",

        "oLanguage": {
            "sLengthMenu": "Mostrando _MENU_ registros por página",
            "sZeroRecords": "Lo siento pero no se encontraron registros",
            "sInfo": "Mostrando _START_ hasta _END_ de _TOTAL_ registros",
            "sInfoEmpty": "Mostrando 0 hasta 0 de 0 registros",
            "sInfoFiltered": "(Filtrado de _MAX_ registros totales)",
            "sSearch": "Buscar:"

        }
    });
});

</script>