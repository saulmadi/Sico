@using SicoWeb.Plumbing
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
     <link href="@Url.Content("~/Content/Style.css")" rel="stylesheet" type="text/css" />
     <link href="@Url.Content("~/Content/themes/ui-darkness/jquery-ui-1.8.17.custom.css")" rel="stylesheet" type="text/css" />    
 
    
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.17.custom.min.js")" type="text/javascript"></script>
    <script src=" @Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    

    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    

    
    @*<script src="../../Scripts/js/UiControls.js" type="text/javascript"></script>*@
</head>


<body>
    <div id="page">
        <div id="pageHeader">
            <ul class="menu">
                <li> @Html.Partial("_LogOnPartial")</li>
            </ul>
            
              <div class="logo">
                
               </div>
            
            <div class="searchbox">
                Buscar : <input type="text" class="searchbox_textbox" /><input type="button" class="searchbox_btn" />
            </div>
        </div>
        <div id="navigation">
            <ul class="menu">
               <li>@Html.ActionLink("Inicio", "Index", "Inicio")</li>
                            
            </ul>
        </div>
        <div id="pageContent">
            <div class="b">
                <div class="left">
                    <div class="submenu">
                    @{
                        @Html.Partial("_SubMenu", @ViewData[ViewDataVariables.SubMenuItems])
                    }

                     <ul class="menu">
               
               <li>@Html.ActionLink("Tipos Facturas","Index","TiposFacturas")</li>
               <li>@Html.ActionLink("Tipos Motocicletas","Index","TiposMotociletas")</li>
               <li>@Html.ActionLink("Tarjetas Credito","Index","TarjetasCredito")</li>
               <li>@Html.ActionLink("Marcas","Index","Marcas")</li>
               <li>@Html.ActionLink("Departamentos","Index","Departamentos")</li>               
            </ul>
                    </div>
                </div>
                <div class="right">
                    
                    
                    @{
                        if (TempData["message"] != null)
                        {
                            <div class="ui-widget">
			<div class="ui-state-highlight ui-corner-all" style="padding: 0 .7em;"> 
            <span class="ui-icon ui-icon-info" style="float: left; margin-right: .3em;"></span> 
                            @TempData["message"]
                             </div>
                    </div>
                        }
                        if (TempData["errormessage"] != null)
                        {
                            <div class="ui-widget" >
			<div class="ui-state-error ui-corner-all" style="padding: 0 .7em;"> 
				<p><span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span> 
                            @TempData["errormessage"]
                             </div>
                    </div>
                        }
                    }

                   
                    @RenderBody() 
                </div>
            </div>
        </div>
        
        <div class="pageContentFooter">
        </div>
        <div class="block margin_t_10">
            <div class="h"></div>
            <div class="b">
                <div class="newsletter margin_l_10">
                    <div class="cGray bold">Join Newsletter</div>
                    <p class="f11">
                        The weekly newsletter to help you learn more about technology and promotions.
                        <input type="text" class="newsletter_text" /><input type="button" value="Subscribe" class="newsletter_btn"  />
                    </p>
                </div>
                <div class="line"></div>
                <div class="fLeft w180 margin_l_10">
                    <div class="cGray bold">Product Categories</div>
                    <ul class="list">
                        <li><a href="">Computers</a></li>
                        <li><a href="">Electronics</a></li>
                        <li><a href="">Accessories</a></li>
                        <li><a href="">Others</a></li>
                    </ul>
                </div>
                <div class="fLeft w180">
                    <div class="cGray bold">Customer Service</div>
                    <ul class="list">
                        <li><a href="">Help</a></li>
                        <li><a href="">Contact Us</a></li>
                        <li><a href="">About Us</a></li>
                        <li><a href="">Online Returns </a></li>
                    </ul>
                </div>
                <div class="fLeft w180">
                    <div class="cGray bold">Shopping Policy</div>
                    <ul class="list">
                        <li><a href="">Terms & Conditions</a></li>
                        <li><a href="">Privacy Policy</a></li>
                    </ul>
                </div>
                <div class="fLeft w180">
                    <div class="cGray bold">Your Order</div>
                    <ul class="list">
                        <li><a href="">Order Status</a></li>
                        <li><a href="">Shipping & Delivery</a></li>
                        <li><a href="">Store Pickup</a></li>
                        <li><a href="">Find a Rebate</a></li>
                        <li><a href="">Returns</a></li>
                    </ul>
                </div>
            </div>
            <div class="f"></div>
        </div>
        
    </div>
    <div id="pageFooter">
           Esta página fúe desarrollada por Ing. Saúl Mayorquín - saulmadi@gmail.com
        </div>
</body>


</html>
